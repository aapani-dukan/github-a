{
  "compilerOptions": {
    "target": "ES2020",                              // ✅ Safe backend runtime target
    "module": "CommonJS",                            // ✅ Node.js में compatible module type
    "outDir": "dist",                                // ✅ compiled output यहाँ जाएगा
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/backend/*": ["shared/backend/*"],
      "@shared/frontend/*": ["shared/frontend/*"]
    }
  },
  "include": [
    "server/**/*.ts",
    "shared/**/*.ts",
    "shared/**/*.tsx"
  ]
}
