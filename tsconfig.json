{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",                             // ✅ जोड़ा गया
    "paths": {
      "@shared/*": ["shared/*"]                 // ✅ जोड़ा गया alias
    }
  },
  "include": ["server/**/*", "shared/**/*"]     // ✅ shared भी include किया गया
}
