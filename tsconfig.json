{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "baseUrl": ".", // This is crucial for paths
    "paths": {
      "@/shared/*": ["./shared/*"],
      "@/server/*": ["./server/*"],
      "@/client/*": ["./client/*"]
    }
  },
  "include": ["server/**/*.ts", "shared/**/*.ts"], // Ensure these paths are correct
  "exclude": ["node_modules", "dist"]
}
