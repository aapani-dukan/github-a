// root tsconfig.json
{
  "compilerOptions": {
    // ... अन्य compilerOptions ...
    "baseUrl": ".", // यह सुनिश्चित करता है कि पाथ रूट से हल किए जाएं
    "paths": {
      "@shared/*": ["shared/*"], // सुनिश्चित करें कि यह एलियास मौजूद है
      "@/shared/*": ["shared/*"]  // सुनिश्चित करें कि यह एलियास मौजूद है
    }
  },
  "include": ["src", "server", "shared"], // <--- 'shared' को यहां जोड़ना महत्वपूर्ण है
  "references": [
    { "path": "./client/tsconfig.node.json" },
    { "path": "./server/tsconfig.json" }
  ]
}

