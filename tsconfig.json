{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@shared/backend/*": ["shared/backend/*"],
      "@shared/frontend/*": ["shared/frontend/*"]
    }
  },
  "include": [
    "server/**/*.ts",
    "shared/**/*.ts",
    "shared/**/*.tsx",
    "client/**/*.ts",
    "client/**/*.tsx"
  ],
  "references": [
    { "path": "./client" },
    { "path": "./server" }
  ]
}
