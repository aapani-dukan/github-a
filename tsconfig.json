{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["shared/*"]  
    }
  },
  "include": [
    "server/**/*.ts",
    "shared/**/*.ts",
    "shared/**/*.tsx"
  ],
  "references": [
    { "path": "./client" },
    { "path": "./server" }
  ]
}
