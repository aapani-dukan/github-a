{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Bundler", // 'Node' या 'Bundler' सबसे अच्छा काम करता है
    "outDir": "./dist",
    "baseUrl": ".", // यह महत्वपूर्ण है
    "paths": {
      // यह पाथ एलियास बहुत महत्वपूर्ण है
      "@/shared/*": ["./shared/*"],
      "@/server/*": ["./server/*"],
      "@/client/*": ["./client/src/*"], // <--- यह लाइन सुनिश्चित करें कि यह सही है
      "@/components/*": ["./client/src/components/*"],
      "@/hooks/*": ["./client/src/hooks/*"],
      "@/lib/*": ["./client/src/lib/*"],
      "@/pages/*": ["./client/src/pages/*"],
      "@/utils/*": ["./client/src/utils/*"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "server/**/*.ts",
    "shared/**/*.ts",
    "client/**/*.tsx",
    "client/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
